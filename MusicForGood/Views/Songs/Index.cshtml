@using MusicForGood.Models;

<h1>Songs</h1>

@if (Model.Count == 0)
{
  <h2>No Songs have been added yet!</h2>
}
else
{
<ul>
@foreach (Song song in Model)
{
  <li>@Html.ActionLink($"{song.Title}", "Show", new { id = song.SongId })</li>
}
</ul>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Create Song", "Create")</p>