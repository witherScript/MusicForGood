@using MusicForGood.Models;

<h1>Playlists</h1>

@if (@Model.Count == 0)
{
  <h3>No playlists... yet!</h3>
} 

<ul>
  @foreach(Playlist playlist in Model)
  {
    <li>@Html.ActionLink($"{playlist.Name}", "Show", new { id = playlist.PlaylistId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new playlist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>